{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "module": "esnext",
    "noEmit": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "types": ["vocs"]
  },
  "include": ["vocs.config.ts"]
}
